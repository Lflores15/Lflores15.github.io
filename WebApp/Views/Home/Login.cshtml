@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input type="email" name="Email" required />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="Password" required />
    </div>
    <button type="submit">Login</button>
</form>
